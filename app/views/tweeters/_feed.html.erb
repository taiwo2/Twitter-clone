<div class='column is-half'>
  <% if user_signed_in? %>

  <article class='media box'>
    <figure class='media-left'>
      <p class='image is-64x64'>
        <%= gravatar_image_tag(current_user.email, size: 64, alt: current_user.name) %>
      </p>
    </figure>
    <div class='media-content'>
      <%= render "tweeters/form" %>
    </div>
  </article>  
  <% end %>
  
  <% @tweeters.each do |tweet| %>
    <div class='box'>
      <article class='media'>
        <div class='media-left'>
          <figure class='image is-64x64'>
        <%= gravatar_image_tag(tweet.user.email, size: 64, alt: tweet.user.name) %>
        </figure>
    
        <div class='media-content'>
          <div class='content'>
            <strong><%= tweet.user.name %> </strong> <br/>
            <small><%= tweet.user.username %></small>
            <p><%= tweet.tweet %> </p>
          </div>
          <% if user_signed_in? %>
          <nav class='level'>
            <div class='level-left is-mobile'>
              <%= link_to tweet, class: "level-item" do %>
                <span class='icon'><i class='fa fa-link' aria-hidden='true'></i></span>
              <% end %>
              <%= link_to new_tweeter_path, class: "level=item" do %>
                <span class='icon'><i class='fa fa-pencil' aria-hidden='true'></i></span>
              <% end %>
              <%= link_to tweet, method: :delete, data: { confirm: "Are you sure to delete" } do %>
                <span class='icon'><i class='fa fa-trash-o' aria-hidden='true'></i></span>
              <% end %>
            </div>
           
          </nav>
           <% end %>
        </div>
            
      </article>
    </div>
  <% end %>
</div>
